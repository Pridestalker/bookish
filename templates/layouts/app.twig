<!doctype html>
<html lang="{{ site.language }}">
<head>
    {% block page_meta %}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="application-name" content="{{ site.title }}">
    {% endblock %}

    <meta name="base_assets" content="{{ theme.link }}/">

    <title>{% block page_title %}{{ site.title }}{% endblock %}</title>

    {% block page_description %}{% endblock %}
    {% block head_styles %}
        <link href="https://fonts.googleapis.com/css2?family=Merienda&family=Montserrat&display=swap" rel="stylesheet">
    {% endblock %}
    {% block head_scripts %}
        <script src="https://kit.fontawesome.com/eaa399fb9a.js" crossorigin="anonymous"></script>
    {% endblock %}
    {% block post_head_scripts %}{% endblock %}
    {{ fn('wp_head') }}
</head>
<body {{ fn('body_class') }}>
{% block header %}
<header class="header" id="header_{{ post.id }}">
<div class="container mx-auto py-4">
    <div class="flex">
        <figure>
            {% set _logo = Image(theme.theme_mod('custom_logo')) %}
            <a href="{{ site.link }}">
                <picture>
                    <source srcset="{{ _logo.src|resize(150, 90)|towebp }}" type="image/webp">
                    <source srcset="{{ _logo.src|resize(300, 180)|towebp }} 2x" type="image/webp">
                    <img src="{{ _logo.src }}" alt="{{ site.title }}" class="custom-logo">
                </picture>
            </a>
        </figure>
        <div class="ml-auto my-auto hidden lg:block w-2/5">
            <form class="search-form" action="{{ site.link }}">
                <input type="hidden" name="post_type" value="product" id="post_type">
                <label for="autoComplete" class="sr-only">
                    Zoeken naar
                </label>
                <input type="text"
                       placeholder="Waar ben je naar op zoek?"
                       tabindex="1"
                       id="autoComplete" name="s" autocomplete="off">
                <button class="btn search-icon" type="submit" name="Zoeken">
                    <i class="fad fa-search text-primary"></i>
                </button>
            </form>
        </div>
        <div class="ml-auto lg:ml-4 my-auto">
            <a href="{{ get_cart_url() }}" class="text-primary js-shopping-cart-button shopping-cart-button p-2">
                <span class="hidden lg:inline-block mr-2">Winkelmandje</span>
                <i class="fad fa-shopping-bag"></i>
                <span class="bulb">
                    {{ fn('WC').cart.get_cart_contents_count }}
                </span>
            </a>
        </div>
    </div>
    <div class="flex lg:hidden mt-4">
        <form class="search-form" action="{{ site.link }}">
            <input type="hidden" name="post_type" value="product" id="post_type">
            <input type="text"
                   placeholder="Waar ben je naar op zoek?"
                   tabindex="1"
                   id="autoComplete" name="s" autocomplete="off">
            <button class="btn search-icon" type="submit">
                <i class="fad fa-search text-primary"></i>
            </button>
        </form>
        <button class="button primary ml-auto js-nav-opener">
            <i class="fas fa-bars"></i>
        </button>
    </div>
</div>
</header>
{% endblock %}

{% block navbar %}
<div class="nav-wrapper">
    <div class="container mx-auto py-4">
        <nav class="nav">
            {% do action('bookish/view/layout/app/nav/pre') %}
            {% for item in primaryMenu.items %}
                <div class="submenu-group">
                    <a
                            href="{{ item.link }}"
                            class="nav-item {{ item.classes|join(' ') }}"
                            title="{{ item.title }}"
                            rel="{{ link.is_external? 'noopener': '' }}"
                    >
                        {{ item.name }}
                    </a>

                    {% if item.children %}
                        <ul class="submenu">
                            {% for child in item.children %}
                                <li>
                                    <a href="{{ child.link }}" title="{{ child.title }}">{{ child.name }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            {% endfor %}
            {% do action('bookish/view/layout/app/nav/post') %}

            <a href="{{ fn('get_permalink', fn('get_option', 'woocommerce_myaccount_page_id')) }}" class="ml-auto nav-item">
                <i class="fad fa-book-reader"></i>
                <span class="inline-block">Mijn account</span>
            </a>
        </nav>
    </div>
</div>
{% endblock %}

{% block content %}
    <main id="app">
        {{ post.content }}
    </main>
{% endblock %}

{% block footer %}
<footer class="footer">
    <div class="container mx-auto py-4 px-4 lg:px-0">
        <div class="lg:flex">
            <div class="lg:w-1/3 mb-4">
                <h3>Contact</h3>

                <p>
                    <a href="mailto:info@bookishgoods.nl">
                        <i class="fad fa-envelope-open-text"></i>
                        info@bookishgoods.nl
                    </a>
                </p>
            </div>
            <div class="lg:w-1/3 mb-4">
                <h3>Over Bookish Goods</h3>
                <div class="content">
                    {{ bookish_theme_option('about-store') }}
                </div>
            </div>
            <div class="lg:w-1/3">
                <h3>Socials</h3>
                <a href="//facebook.com/bookishgoods" title="Bezoek mijn facebook pagina">
                    <i class="fab fa-facebook-square" style="font-size: 1.5rem;"></i>
                </a>

                <a href="//www.instagram.com/bookishgoods/" title="Bezoek mijn instagram pagina">
                    <i class="fab fa-instagram" style="font-size: 1.5rem;"></i>
                </a>
            </div>
        </div>
    </div>
    <hr>
    <div class="flex justify-center flex-col lg:flex-row py-2 px-4 lg:px-0">
        <a href="{{ fn('get_privacy_policy_url') }}">Privacy</a> <span class="mx-2 hidden lg:inline">|</span>
        <a href="/algemene-voorwaarden/">Algemene voorwaarden</a> <span class="mx-2 hidden lg:inline">|</span>
        <a href="/disclaimer/">Disclaimer</a>
    </div>
</footer>
{% endblock %}
{{ fn('wp_footer') }}
</body>
</html>
